# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here

# Admin API Authentication (generate with: python admin_auth.py generate)
# MUST be different from FLASK_SECRET_KEY
ADMIN_SECRET=your_admin_secret_here

# Data Encryption (generate with: python data_encryption.py generate-key)
# Encrypts phone numbers and health data at rest
DATA_ENCRYPTION_KEY=your_encryption_key_here

# Webhook Configuration (your public URL for Twilio to send replies to)
WEBHOOK_BASE_URL=https://your-domain.com

# Optional: Notification email for admin alerts
ADMIN_PHONE=+1XXXXXXXXXX
